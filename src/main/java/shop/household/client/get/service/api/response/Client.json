{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Client",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "firstname": {
      "type": "string",
      "maxLength": 40
    },
    "lastname": {
      "type": "string",
      "maxLength": 40
    },
    "phone": {
      "type": "string",
      "pattern": "^\\+?[0-9]{1,12}$",
      "maxLength": 12
    },
    "phone_extra": {
      "type": "string",
      "pattern": "^\\+?[0-9]{1,12}$",
      "maxLength": 12
    },
    "email": {
      "type": "string",
      "format": "email",
      "maxLength": 40
    },
    "address": {
      "type": "string",
      "maxLength": 200
    },
    "create_at": {
      "type": "string",
      "format": "date-time"
    },
    "update_at": {
      "type": "string",
      "format": "date-time"
    },
    "notes": {
      "type": "string",
      "maxLength": 1000
    },
    "last_order_date": {
      "type": "string",
      "format": "date"
    },
    "total_orders": {
      "type": "integer"
    },
    "total_spent": {
      "type": "number",
      "minimum": 0,
      "multipleOf": 0.01
    }
  },
  "additionalProperties": false
}